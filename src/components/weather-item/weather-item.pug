.weather-item

  .block.left
    .date {{$ctrl.dt2date($ctrl.data.dt)}}

    .temp
      span.daily   {{$ctrl.data.temp.day}} °C
      |  / 
      span.nightly {{$ctrl.data.temp.night}} °C

  .block.center
    div Давление: {{$ctrl.pa2merc($ctrl.data.pressure)}} мм рт. ст.
    div Влажность: {{$ctrl.data.humidity}}%
    div Облачность: {{$ctrl.clouds}}%

  .block.right
    div Скорость ветра: {{$ctrl.data.speed}} м/с
    div Направление ветра: {{$ctrl.data.deg}}°

